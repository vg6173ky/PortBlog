<%= form_with model: @post, local: true do |f| %>
    <div>
        <%= f.label :title %><br />
        <%= f.text_field :title %>        
    </div>

     <div>
        <%= f.label :body %><br />
        <%= f.text_area :body, rows: 3 %>        
    </div>
     <div>
        <%= f.submit %>      
    </div>
<% end %>
